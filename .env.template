# Update these with your Supabase details from your project settings > API
# https://app.supabase.com/project/_/settings/api

# 모바일에서 접속을 허용하려면 개발 머신의 IP를 입력하고, 모바일로 접속 한 후에, 이메일로 로그인
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_HOST=http://localhost:3000
NEXT_PUBLIC_SOCIAL_LOGIN_REDIRECT_TO=http://localhost:3000

# 로컬 Supabase 시작 후 출력되는 키 값을 입력하세요
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres
# GitHub OAuth 설정 (선택 - 소셜 로그인 사용 시 필요)
# https://github.com/settings/developers 에서 OAuth 앱 생성
# SUPABASE_AUTH_GITHUB_CLIENT_ID=your_github_client_id
# SUPABASE_AUTH_GITHUB_SECRET=your_github_secret
# SUPABASE_AUTH_GITHUB_CALLBACK_URL_FOR_DEV=http://localhost:54321/auth/v1/callback
NEXT_PUBLIC_SUPABASE_AUTH_DEBUG_ENABLED=false

# 소셜 로그인 활성화 여부 (true: Google/GitHub/Apple 로그인 표시, false: 이메일만)
# OAuth 앱 설정이 완료된 경우에만 true로 설정하세요.
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false

# AWS SQS 설정 (선택 - 알림 큐 기능 사용 시 필요)
# AWS SQS를 사용하지 않아도 앱의 핵심 기능은 정상 동작합니다.
# AWS_SQS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SQS_ACCESS_KEY_SECRET=your_aws_secret_access_key
# AWS_SQS_QUEUE_URL=https://sqs.ap-northeast-2.amazonaws.com/your-account/your-queue

# AI 기능 설정
# ENABLE_AI가 true일 때만 AI 기능(채팅, 제목 생성, 이미지 분석, 임베딩)이 활성화됩니다.
# 오픈소스 배포 시 기본값 false로 설정하여 API 키 없이도 앱이 정상 동작합니다.
ENABLE_AI=false

# OpenAI API 키 (ENABLE_AI=true일 때 필요)
# https://platform.openai.com/api-keys 에서 발급
OPENAI_API_KEY=sk-your-openai-api-key
# OpenAI Organization ID (선택 - 조직 계정 사용 시)
# OPENAI_ORGANIZATION_ID=org-your-organization-id

# Uploadcare 설정 (선택 - 이미지 업로드 기능 사용 시 필요)
# https://uploadcare.com/ 에서 무료 계정 생성 가능
# UPLOADCARE_PRIVATE_KEY=your_uploadcare_private_key
# NEXT_PUBLIC_UPLOADCARE_PUBLIC_KEY=your_uploadcare_public_key

# Sentry 에러 모니터링 (선택 - 에러 추적 기능 사용 시)
# https://sentry.io 에서 프로젝트 생성 후 DSN 발급
# NEXT_PUBLIC_SENTRY_PROJECT=your-sentry-project
# NEXT_PUBLIC_SENTRY_DSN=https://your-key@your-org.ingest.sentry.io/project-id
NEXT_PUBLIC_ENABLE_SENTRY=false

# Android 앱 설정 (선택 - Android 앱 연동 시 필요)
# keytool -list -v -keystore ~/.android/debug.keystore -alias androiddebugkey 로 확인
# NEXT_PUBLIC_ANDROID_sha256_cert_fingerprints=XX:XX:XX:...

# CRAG (Corrective RAG) 설정 (선택 - AI 기능 활성화 시 RAG 품질 개선)
# ENABLE_AI=true일 때만 효과가 있습니다.
# NEXT_PUBLIC_CRAG_ENABLED=true       # 클라이언트 CRAG 파이프라인 활성화 (기본값: false)
# CRAG_ENABLED=true                   # 서버 CRAG 파이프라인 활성화 (기본값: false)
# CRAG_RELEVANCE_THRESHOLD=0.7        # 관련성 임계값 (0-1, 기본값: 0.7)
# CRAG_AMBIGUOUS_THRESHOLD=0.4        # 모호성 임계값 (0-1, 기본값: 0.4)
# CRAG_MAX_RETRIES=2                  # 최대 재시도 횟수 (기본값: 2)
# CRAG_ADAPTIVE_ROUTING=true          # Adaptive 라우팅 활성화 (기본값: true)

# Langfuse 설정 (선택 - LLM/RAG 품질 모니터링)
# https://langfuse.com 에서 프로젝트 생성 후 키 발급
# LANGFUSE_ENABLED=true               # 명시적 비활성화 시 false (키 미설정 시 자동 비활성화)
# LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
# LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
# LANGFUSE_HOST=https://cloud.langfuse.com  # Self-hosted인 경우 URL 변경

# DEBUG=  # 개발 시 필요한 로거 활성화 (예: sync,chat,editor,alarm)
NEXT_PUBLIC_ENABLE_JOTAI_DEVTOOLS=false # jotai-devtools 켬/끔